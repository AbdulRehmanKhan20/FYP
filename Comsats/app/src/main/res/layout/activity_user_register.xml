<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_register"
    android:background="@drawable/back3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_register"
    android:orientation="vertical"
    android:padding="20dp">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="@drawable/signup2"
        />

    <TextView
        android:text="User Registration Form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="#fff"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#fbfefd"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/editTextUsername"
        android:hint="Enter Your User Name"
        android:gravity="center"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#fbfefd"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editTextUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/editTextFirstName"
        android:hint="Enter Your First Name"
        android:gravity="center"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#fbfefd"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editTextFirstName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/editTextLastName"
        android:hint="Enter Your Last Name"
        android:gravity="center"
        />

    <Spinner
        android:id="@+id/editTextType"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/editTextLastName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/btn_dropdown"
        android:ems="10"
        android:gravity="center"
        android:hint="User Type"
        android:inputType="textPersonName"
        android:spinnerMode="dropdown"
        android:visibility="gone" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#fbfefd"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/editTextType"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/editTextEmail"
        android:hint="Enter Your Email"
        android:gravity="center"/>


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/editTextEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/editTextPassword"
        android:hint="Enter Your Password"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >




    <Button
        android:text="Register"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPassword"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBtnBlue"
        android:background="@drawable/buttonshape"
        android:layout_weight="1"
        android:textSize="20sp"
        android:shadowColor="#D1D1D1"
        android:shadowDx="0"
        android:shadowDy="0"
        android:layout_margin="10dp"
        android:shadowRadius="5"
        android:id="@+id/Submitt" />

    <Button
        android:text="Already Register | Log In Here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Submitt"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBtnBlue"
        android:background="@drawable/buttonshape"
        android:layout_weight="1"
        android:textSize="20sp"
        android:shadowColor="#D1D1D1"
        android:shadowDx="0"
        android:shadowDy="0"
        android:layout_margin="10dp"
        android:shadowRadius="5"
        android:id="@+id/Login" />

</LinearLayout>

</LinearLayout>